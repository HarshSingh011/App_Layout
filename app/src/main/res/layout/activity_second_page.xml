<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second_page">

    <TextView
        android:fontFamily="poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Login Here"
        android:textAlignment="center"
        android:textColor="#1F41BB"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:fontFamily="poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Welcome back youâ€™ve\nbeen missed!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="12dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:hint="Email"
        android:textSize="30dp"
        android:inputType="textPersonName"
        android:layout_marginTop="220dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F1F4FF"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="320dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="#F1F4FF"
        android:textSize="33dp"
        android:textColorHint="#757575"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:text="Forgot your password?"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:textColor="#1F41BB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="460dp"
        android:backgroundTint="#1f41bb"
        android:text="Login"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="12dp"/>

    <TextView
        android:fontFamily="poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="Create new account"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:fontfamily="poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="Or continue with"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#1F41BB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:layout_width="60dp"
        android:padding="10dp"
        android:layout_height="60dp"
        android:layout_marginTop="645dp"
        android:src="@drawable/googler"
        android:background="#ECECEC"
        android:layout_marginRight="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
    />

    <ImageButton
        android:layout_width="60dp"
        android:padding="10dp"
        android:layout_height="60dp"
        android:layout_marginTop="645dp"
        android:scaleType="fitCenter"
        android:src="@drawable/facr"
        android:background="#ECECEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:layout_width="60dp"
        android:padding="10dp"
        android:background="#ECECEC"
        android:layout_height="60dp"
        android:layout_marginTop="645dp"
        android:src="@drawable/appler"
        android:layout_marginLeft="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

